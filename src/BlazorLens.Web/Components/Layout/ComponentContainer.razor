@*
    ComponentContainer - Modern grid container with glassmorphism
    Compliance: UI-001 (Consistent Design), UX-001 (Responsive)
    Future: Drag & drop, auto-layout algorithms (Phase 2)
*@

<div class="component-container">
    <ErrorBoundary>
        <ChildContent>
            <div class="component-grid">
                <CascadingValue Value="this">
                    @ChildContent
                </CascadingValue>
            </div>
        </ChildContent>
        <ErrorContent Context="exception">
            <div class="component-error">
                <div class="error-icon-large">⚠️</div>
                <h3 class="error-title-large">Component Error</h3>
                <p class="error-message-large">
                    Unable to load component. Please try refreshing the page.
                </p>
                <details class="error-details">
                    <summary>Technical details</summary>
                    <pre class="error-stack">@exception.Message</pre>
                </details>
            </div>
        </ErrorContent>
    </ErrorBoundary>
</div>

@code {
    /// <summary>
    /// Child content to be rendered inside the grid.
    /// Compliance: OOD-001 (Single Responsibility)
    /// </summary>
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    // Future: Grid configuration properties
    // - GridColumns (int)
